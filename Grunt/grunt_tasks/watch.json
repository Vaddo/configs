{
  "phplint": {
    "files": ["<%= app.root %>/app/*.php",
              "<%= app.source %>/**/*.php"],
    "tasks": ["phplint", "phpmd"]
  },
  "jshint": {
    "files": ["<%= app.source %>/**/*.js"],
    "tasks": ["jshint", "files_check:scripts"]
  },
  "templates": {
    "files": ["<%= app.source %>/**/*.html.twig"],
    "tasks": ["files_check:templates"]
  },
  "compass": {
    "files": ["<%= app.source %>/**/*.scss"],
    "tasks": ["compass", "autoprefixer"]
  },
  "reload-styles": {
    "files": ["<%= app.source %>/**/*.css"],
    "options": {"livereload": 1338 }
  },
  "reload": {
    "files": ["<%= app.source %>/**/*.html.twig",
              "<%= app.source %>/**/*.png",
              "<%= app.source %>/**/*.js",
              "<%= app.source %>/**/*Type.php"],
    "options": {"livereload": 1338 }
  }
}
